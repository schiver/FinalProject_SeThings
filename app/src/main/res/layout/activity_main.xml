<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
    <!-- Toolbar Section -->
    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/myWhite"
        android:minHeight="?attr/actionBarSize"
        app:theme="@style/ToolbarTheme" />
    <!-- End of Toolbar Section-->
    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginTop="70dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/toolbar">

        <RelativeLayout
            android:id="@+id/container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/Home1">

                <GridLayout
                    android:layout_width="325dp"
                    android:layout_height="wrap_content"
                    android:rowCount="2"
                    android:columnCount="1">
                    <android.support.v7.widget.CardView
                        android:layout_width="match_parent"
                        app:cardBackgroundColor="@color/colorBase2"
                        android:layout_height="130dp"
                        android:layout_row="0"
                        android:layout_column="0"
                        app:cardElevation="8dp"
                        app:cardCornerRadius="8dp">
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            >
                            <TextView
                                android:id="@+id/Title1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Custom Project"
                                android:textColor="@color/myWhite"
                                android:layout_margin="10dp"
                                android:textSize="18sp"
                                />
                            <TextView
                                android:id="@+id/textContent1"
                                android:layout_width="310dp"
                                android:layout_height="wrap_content"
                                android:text="@string/content_1"
                                android:layout_below="@+id/Title1"
                                android:textColor="@color/myWhite"
                                android:layout_marginLeft="10dp"
                                android:layout_marginTop="-8dp"
                                android:textSize="13sp"
                                />
                            <Button
                                android:layout_width="70dp"
                                android:layout_height="30dp"
                                android:id="@+id/button1"
                                android:layout_marginLeft="165dp"
                                android:text="@string/tutorial"
                                android:textSize="12sp"
                                android:textColor="@color/myWhite"
                                android:layout_below="@+id/textContent1"
                                android:background="@drawable/button_border"
                                android:layout_marginTop="10dp"/>
                            <Button
                                android:layout_width="70dp"
                                android:layout_height="30dp"
                                android:id="@+id/button2"
                                android:layout_marginLeft="240dp"
                                android:text="@string/explore"
                                android:textSize="12sp"
                                android:textColor="@color/myWhite"
                                android:layout_below="@+id/textContent1"
                                android:background="@drawable/button_border"
                                android:layout_marginTop="10dp"/>
                        </RelativeLayout>

                    </android.support.v7.widget.CardView>
                    <android.support.v7.widget.CardView
                        android:layout_width="match_parent"
                        app:cardBackgroundColor="@color/colorBase1"
                        android:layout_height="130dp"
                        android:layout_row="1"
                        android:layout_marginTop="10dp"
                        android:layout_column="0"
                        app:cardElevation="8dp"
                        app:cardCornerRadius="8dp">
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            >
                            <TextView
                                android:id="@+id/Title2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Smart Home"
                                android:textColor="@color/myWhite"
                                android:layout_margin="10dp"
                                android:textSize="18sp"
                                />
                            <TextView
                                android:id="@+id/textContent2"
                                android:layout_width="310dp"
                                android:layout_height="wrap_content"
                                android:text="@string/content_2"
                                android:layout_below="@+id/Title2"
                                android:textColor="@color/myWhite"
                                android:layout_marginLeft="10dp"
                                android:layout_marginTop="-8dp"
                                android:textSize="13sp"
                                />
                            <Button
                                android:layout_width="70dp"
                                android:layout_height="30dp"
                                android:id="@+id/button3"
                                android:layout_marginLeft="165dp"
                                android:text="@string/tutorial"
                                android:textSize="12sp"
                                android:textColor="@color/myWhite"
                                android:layout_below="@+id/textContent2"
                                android:layout_marginTop="7dp"
                                android:background="@drawable/button_border"
                                />
                            <Button
                                android:layout_width="70dp"
                                android:layout_height="30dp"
                                android:id="@+id/button4"
                                android:layout_marginLeft="240dp"
                                android:text="@string/tutorial"
                                android:textSize="12sp"
                                android:textColor="@color/myWhite"
                                android:layout_below="@+id/textContent2"
                                android:background="@drawable/button_border"
                                android:layout_marginTop="7dp"/>
                        </RelativeLayout>
                    </android.support.v7.widget.CardView>
                </GridLayout>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/Home1"
                android:layout_marginTop="10dp"
                android:layout_centerHorizontal="true"
                android:id="@+id/Home2"
                >
                <TextView
                    android:id="@+id/judul5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:text="My SeThings"
                    android:textColor="@color/textColor1"
                    android:textStyle="bold"
                    android:textSize="24sp" />
                <TextView
                    android:id="@+id/judul6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_below="@+id/judul5"
                    android:textColor="@color/textColor1"
                    android:text="Tap menu bellow to explore"
                    android:textSize="12sp" />

            </RelativeLayout>
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="false"
                android:layout_below="@+id/Home2">
                <GridLayout
                    android:layout_width="330dp"
                    android:layout_height="wrap_content"
                    android:rowCount="2"
                    android:columnCount="3"

                    >
                    <android.support.v7.widget.CardView
                        android:id="@+id/Home"
                        android:layout_width="96dp"
                        android:layout_height="96dp"
                        app:cardBackgroundColor="@color/myWhite"
                        android:layout_row="0"
                        android:layout_column="0"
                        app:cardElevation="3dp"
                        app:cardCornerRadius="8dp"
                        android:layout_margin="7dp">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:id="@+id/menu1"
                            >
                            <ImageView
                                android:layout_width="65dp"
                                android:layout_height="65dp"
                                android:layout_marginTop="9dp"
                                android:layout_marginLeft="17dp"
                                android:orientation="vertical"
                                android:background="@drawable/circle"/>
                            <ImageView
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:layout_marginTop="16dp"
                                android:layout_marginLeft="-58dp"
                                android:orientation="vertical"
                                android:src="@drawable/ic_home_black_10dp"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="27dp"
                            android:layout_marginTop="77dp">
                            <TextView
                                android:id="@+id/MenuText1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/textColor1"
                                android:text="My Home"
                                android:textSize="12sp" />
                        </LinearLayout>
                    </android.support.v7.widget.CardView>
                    <android.support.v7.widget.CardView
                        android:id="@+id/Config"
                        android:layout_width="96dp"
                        android:layout_height="96dp"
                        app:cardBackgroundColor="@color/myWhite"
                        android:layout_row="0"
                        android:layout_column="1"
                        app:cardElevation="8dp"
                        app:cardCornerRadius="8dp"
                        android:layout_margin="7dp">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:id="@+id/menu2"
                            >
                            <ImageView
                                android:layout_width="65dp"
                                android:layout_height="65dp"
                                android:layout_marginTop="9dp"
                                android:layout_marginLeft="17dp"
                                android:orientation="vertical"
                                android:background="@drawable/circle2"/>
                            <ImageView
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:layout_marginTop="21dp"
                                android:layout_marginLeft="-53dp"
                                android:orientation="vertical"
                                android:src="@drawable/ic_settings"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="29dp"
                            android:layout_marginTop="77dp">
                            <TextView
                                android:id="@+id/MenuText2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/textColor1"
                                android:text="Control"
                                android:textSize="12sp" />
                        </LinearLayout>
                    </android.support.v7.widget.CardView>
                    <android.support.v7.widget.CardView
                        android:id="@+id/Docs"
                        android:layout_width="96dp"
                        android:layout_height="96dp"
                        app:cardBackgroundColor="@color/myWhite"
                        android:layout_row="0"
                        android:layout_column="2"
                        app:cardElevation="8dp"
                        app:cardCornerRadius="8dp"
                        android:layout_margin="7dp"
                        >
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:id="@+id/menu3"
                            >
                            <ImageView
                                android:layout_width="65dp"
                                android:layout_height="65dp"
                                android:layout_marginTop="9dp"
                                android:layout_marginLeft="17dp"
                                android:orientation="vertical"
                                android:background="@drawable/circle3"/>
                            <ImageView
                                android:layout_width="40dp"
                                android:layout_height="35dp"
                                android:layout_marginTop="24dp"
                                android:layout_marginLeft="-55dp"
                                android:orientation="vertical"
                                android:src="@drawable/ic_magnifier_tool"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="8dp"
                            android:layout_marginTop="77dp">
                            <TextView
                                android:id="@+id/MenuText3"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/textColor1"
                                android:text="Documentation"
                                android:textSize="12sp" />
                        </LinearLayout>
                    </android.support.v7.widget.CardView>
                    <android.support.v7.widget.CardView
                        android:id="@+id/Device"
                        android:layout_width="96dp"
                        android:layout_height="96dp"
                        app:cardBackgroundColor="@color/myWhite"
                        android:layout_row="1"
                        android:layout_column="0"
                        app:cardElevation="8dp"
                        app:cardCornerRadius="8dp"
                        android:layout_margin="7dp">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:id="@+id/menu4"
                            >
                            <ImageView
                                android:layout_width="65dp"
                                android:layout_height="65dp"
                                android:layout_marginTop="9dp"
                                android:layout_marginLeft="17dp"
                                android:orientation="vertical"
                                android:background="@drawable/circle4"/>
                            <ImageView
                                android:layout_width="38dp"
                                android:layout_height="38dp"
                                android:layout_marginTop="22dp"
                                android:layout_marginLeft="-53dp"
                                android:orientation="vertical"
                                android:src="@drawable/ic_devices"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="22dp"
                            android:layout_marginTop="77dp">
                            <TextView
                                android:id="@+id/MenuText4"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/textColor1"
                                android:text="Device List"
                                android:textSize="12sp" />
                        </LinearLayout>
                    </android.support.v7.widget.CardView>
                    <android.support.v7.widget.CardView
                        android:id="@+id/Profile"
                        android:layout_width="96dp"
                        android:layout_height="96dp"
                        app:cardBackgroundColor="@color/myWhite"
                        android:layout_row="1"
                        android:layout_column="1"
                        app:cardElevation="8dp"
                        app:cardCornerRadius="8dp"
                        android:layout_margin="7dp">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:id="@+id/menu5"
                            >
                            <ImageView
                                android:layout_width="65dp"
                                android:layout_height="65dp"
                                android:layout_marginTop="9dp"
                                android:layout_marginLeft="17dp"
                                android:orientation="vertical"
                                android:background="@drawable/circle5"/>
                            <ImageView
                                android:layout_width="47dp"
                                android:layout_height="47dp"
                                android:layout_marginTop="16dp"
                                android:layout_marginLeft="-57dp"
                                android:orientation="vertical"
                                android:src="@drawable/ic_user"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="33dp"
                            android:layout_marginTop="77dp">
                            <TextView
                                android:id="@+id/MenuText5"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/textColor1"
                                android:text="Profile"
                                android:textSize="12sp" />
                        </LinearLayout>
                    </android.support.v7.widget.CardView>
                    <android.support.v7.widget.CardView
                        android:id="@+id/Help"
                        android:layout_width="96dp"
                        android:layout_height="96dp"
                        app:cardBackgroundColor="@color/myWhite"
                        android:layout_row="1"
                        android:layout_column="2"
                        app:cardElevation="8dp"
                        app:cardCornerRadius="8dp"
                        android:layout_margin="7dp"
                        >
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:id="@+id/menu6"
                            >
                            <ImageView
                                android:layout_width="65dp"
                                android:layout_height="65dp"
                                android:layout_marginTop="9dp"
                                android:layout_marginLeft="17dp"
                                android:orientation="vertical"
                                android:background="@drawable/circle6"/>
                            <ImageView
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:layout_marginTop="21dp"
                                android:layout_marginLeft="-54dp"
                                android:orientation="vertical"
                                android:src="@drawable/ic_info_sign"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="38dp"
                            android:layout_marginTop="77dp">
                            <TextView
                                android:id="@+id/MenuText6"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/textColor1"
                                android:text="Help"
                                android:textSize="12sp" />
                        </LinearLayout>
                    </android.support.v7.widget.CardView>
                </GridLayout>
            </RelativeLayout>
        </RelativeLayout>
    </ScrollView>
</android.support.constraint.ConstraintLayout>